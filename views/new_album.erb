    <label for="album_name">Album name</label>
    <input id="n" name="album_name" class="form-control" type="text">
    <br>
    <label for="artist_name">Artist name</label>
    <input id="x" name="artist_name" class="form-control" type="text">
    <label for="artist_name">Year</label>
    <input id="w" name="year" class="form-control" type="text">
  </div>
